@model eLearningProject.DAL.Entities.Testimonial

@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Ekleme Sayfası</h3>

<form method="post">
    <label>İsim Soyisim</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br /><br />
    <label>Meslek</label>
    <input type="text" name="Title" class="form-control" />
    <br /><br />
    <label>Yorum</label>
    @*<input type="text" name="Comment" class="form-control" />*@
    <textarea class="form-control" name="Comment" rows="3"></textarea>
    <br /><br />
    <label>Görsel Yolu</label>
    <input type="text" name="ImageUrl" class="form-control" />
    <br /><br />
    <button class="btn btn-outline-primary">Referansı Kaydet</button>
</form>

