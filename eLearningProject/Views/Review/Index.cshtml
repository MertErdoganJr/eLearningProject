@model eLearningProject.DAL.Entities.Review


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/StudentPanelLayout/Index.cshtml";
}



<head>
    <link rel="stylesheet" href="~/css-half-star-rating/dist/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/Templates/material-lite-master/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div>
    <br />
    <br />
    <div class="container card text-center">
        <form method="post">
            <br />
            <h3>Kurs Seçin</h3>
            <br />
            @Html.DropDownListFor(x => x.CourseID, (List<SelectListItem>)ViewBag.course, new { @class = "form-control" })
            <br /><br />
            <div id="Rating" class="container text-center">
                <input type="hidden" name="ReviewScore" id="rating" />
            </div>
            <br />
            <div class="container">
                <button class="btn btn-success" id="btn1">Kaydet</button>
            </div>
            <br />
        </form>
    </div>
</div>

<script>
    $(function () {

        $("#Rating").rateYo({

            rating: 0,
            numStars: 10,
            maxValue: 10,
            fullStar: true,

            multiColor: {

                "startColor": "#808080",
                "endColor": "#F39C12"
            },
            onChange: function (rating, rateYoInstance) {
                $('#rating').val(rating);
            }
        });
    });

    $('#btn1').click(function () {
        swal("Değerlendirmeniz Kaydedildi", "Butona Tıklayın", "success");
    });

</script>

