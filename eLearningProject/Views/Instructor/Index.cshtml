@model List<eLearningProject.DAL.Entities.Instructor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Eğitmen Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Eğitmen Adı-Soyadı</th>
                        <th>İçerikleri Gör</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InstructorID</td>
                            <td><img src="@item.ImageUrl" class="rounded mx-auto d-block" style="height:50px; width:50px;" /></td>
                            <td>@item.Name @item.Surname</td>
                            <td><a href="/InstructorAnlysis/Index" class="btn btn-outline-info">Eğitmen Profili</a></td>
                            <td><a href="/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Instructor/AddInstructor/" class="btn btn-outline-primary btn-block">Yeni Eğitmen Girişi</a>
            </div>
        </div>
    </div>
</div>

